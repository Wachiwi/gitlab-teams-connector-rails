<% if @hooks.empty? %>
<div class="ui relaxed divided list">
	<div class="item">
		<div class="content">
			<div class="header">No hooks created. Try <%= link_to 'create a new one', new_admin_hook_url %></div>
		</div>
	</div>
</div>
<% else %>
<div class="ui relaxed divided list">
	<% for hook in @hooks %>
	<div class="item">
		<%= semantic_icon :linkify %>
		<!-- <i class="large github middle aligned icon"></i> -->
		<div class="content">
			<a class="header"><%= hook.name %></a>
			<div class="description"><%= hook.description %></div>
		</div>
	</div>
	<% end %>
</div>
<% end %>
